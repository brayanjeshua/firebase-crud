{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "redirects" : [
      {
        "source": "/posts",
        "destination": "/",
        "type" : 301
      }
    ],
    "rewrites" : [
      {
        "source": "/**",
        "destination": "/app.html"
      }
    ],
    "headers" : [
      {
        "source": "**/*.@(jpg|jpeg|png|gif)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=7200"
          }
        ]
      }
    ]
  }
}
